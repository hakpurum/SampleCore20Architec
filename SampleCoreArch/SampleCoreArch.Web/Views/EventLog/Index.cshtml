@using SampleCoreArch.Core.Logging
@model Result<IEnumerable<SampleCoreArch.Core.Logging.EventLog>>
@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
    <a data-bind="click:$root.create" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Message
            </th>
            <th>
                EventId
            </th>
            <th>
                LogLevel
            </th>
            <th>
                IpAdress
            </th>
            <th>
                HostName
            </th>
            <th>
                CreatedTime
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach:items">
        <tr>
            <td data-bind="text:Id"></td>
            <td data-bind="text:Message"></td>
            <td data-bind="text:EventId"></td>
            <td data-bind="text:LogLevel"></td>
            <td data-bind="text:IpAdress"></td>
            <td data-bind="text:HostName"></td>
            <td data-bind="text:CreatedTime"></td>
            <td>
                <a data-bind="click:$root.detail" href="">Detail</a>
            </td>
        </tr>
    </tbody>
</table>

<!-- Modal -->

<form name="myModal" data-bind="with:selectedItem,submit: save" id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="text" name="Id" data-bind="value:Id" />
                <input type="text" name="Message" data-bind="value:Message"/>
                <p data-bind="html:Message">Some text in the modal.</p>*@
                @{Html.RenderPartial("_EditForm",new EventLog());}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>

    </div>
</form>



@section Scripts {
    @{Html.RenderPartial("_ValidationScriptsPartial");}
}
